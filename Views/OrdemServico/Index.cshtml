@model IEnumerable<osnet.Models.OrdemServico>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Cadastrar nova ordem de servi√ßo</a>
</p>
<table class="table table-responsive table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.titulo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.resumo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.justificativa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.descricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.resolucao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.cliente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.tipoOrdemServico)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.servico)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.titulo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.resumo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.justificativa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.descricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.resolucao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.cliente.nome)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.tipoOrdemServico.nome)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.servico.nome)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.status.nome)
            </td>

            <td>
                <a asp-action="Edit" asp-route-id="@item.id">Alterar</a> |
                <a asp-action="Details" asp-route-id="@item.id">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.id">Excluir</a>
            </td>
        </tr>
}
    </tbody>
</table>
