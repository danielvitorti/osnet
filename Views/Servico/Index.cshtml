@model IEnumerable<osnet.Models.Servico>

@{
    ViewData["Title"] = "Serviço";
}

<section class="content-header">
     <h1> Serviços <small>Listagem</small></h1>
     
    <ol class="breadcrumb">
    <li><a href="#"><i class="fa fa-dashboard"></i> Serviços</a></li>
    <li class="active">Listagem</li>
    </ol>
</section>

<section class="content">
<div class="row">
<div class="col-lg-12 col-xs-12 col-md-12 col-sm-12">

<div class="box box-primary">
    
        <a asp-action="create" title="Cadastrar novo serviço"><i class="fa fa-plus"></i> Cadastrar novo serviço</a>
    
<div class="body">


<table class="table-responsive table-striped table">
    <thead>
        <tr>
            <th>
                <b>
                    @Html.DisplayNameFor(model => model.nome) 
                </b>
            </th>
            <th>
                <b>
                    @Html.DisplayNameFor(model => model.valor)
                </b>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.valor)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.id"><i class="fa fa-pencil-square-o"></i></a> |
                <a asp-action="Details" asp-route-id="@item.id"><i class="fa fa-navicon"></i></a> |
                <a asp-action="Delete" asp-route-id="@item.id"><i class="fa fa-fw fa-trash"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>
</div>

</div>
</section>
